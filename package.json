{
  "name": "Clive",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "pnpm": "^10.19.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @clive/auth generate",
    "db:push": "turbo -F @clive/db push",
    "db:generate": "turbo -F @clive/db generate",
    "db:studio": "turbo -F @clive/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @clive/nextjs...",
    "format": "turbo run format --continue",
    "format:fix": "turbo run format:fix --continue",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint:fix --continue",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@turbo/gen": "^2.5.8",
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "commitlint": "^20.1.0",
    "husky": "^9.1.7"
  },
  "packageManager": "pnpm@10.19.0"
}
