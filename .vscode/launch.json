{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/extension",
        "--folder-uri=${workspaceFolder}",
        "--new-window"
      ],
      "outFiles": ["${workspaceFolder}/apps/extension/dist/**/*.{js,cjs}"],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Run Extension (Watch Mode)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/extension",
        "--folder-uri=${workspaceFolder}",
        "--new-window"
      ],
      "outFiles": ["${workspaceFolder}/apps/extension/dist/**/*.{js,cjs}"],
      "preLaunchTask": "watch:all",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/extension",
        "--extensionTestsPath=${workspaceFolder}/apps/extension/out/test/suite/index",
        "--folder-uri=${workspaceFolder}",
        "--new-window"
      ],
      "outFiles": ["${workspaceFolder}/apps/extension/out/test/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
