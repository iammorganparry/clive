{
  "name": "@clive/memory",
  "version": "0.1.0",
  "type": "module",
  "description": "Persistent memory system for Clive with hybrid semantic search",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "biome check .",
    "format:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.2",
    "chokidar": "^4.0.3",
    "effect": "^3.19.9",
    "js-tiktoken": "^1.0.19",
    "openai": "^4.94.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@clive/biome-config": "*",
    "@clive/tsconfig": "*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.16",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
