{
  "name": "@clive/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./button": {
      "types": "./dist/button.d.ts",
      "default": "./dist/button.js"
    },
    "./card": {
      "types": "./dist/card.d.ts",
      "default": "./dist/card.js"
    },
    "./dropdown-menu": {
      "types": "./dist/dropdown-menu.d.ts",
      "default": "./dist/dropdown-menu.js"
    },
    "./field": {
      "types": "./dist/field.d.ts",
      "default": "./dist/field.js"
    },
    "./input": {
      "types": "./dist/input.d.ts",
      "default": "./dist/input.js"
    },
    "./label": {
      "types": "./dist/label.d.ts",
      "default": "./dist/label.js"
    },
    "./separator": {
      "types": "./dist/separator.d.ts",
      "default": "./dist/separator.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "default": "./dist/theme.js"
    },
    "./toast": {
      "types": "./dist/toast.d.ts",
      "default": "./dist/toast.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "biome check .",
    "format:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "npx shadcn@latest add && biome check --write src"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "radix-ui": "^1.4.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@clive/biome-config": "*",
    "@clive/tsconfig": "*",
    "@types/react": "^19.2.7",
    "react": "^19.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "zod": "^3.24.1"
  }
}