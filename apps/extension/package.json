{
  "name": "clive",
  "displayName": "clive",
  "description": "Your AI E2E Test Writer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "type": "module",
  "activationEvents": [],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "clive.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "clive.showView",
        "title": "Show Clive",
        "icon": "$(beaker)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clive",
          "title": "Clive",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "clive": [
        {
          "id": "clive.mainView",
          "icon": "*",
          "name": "Clive",
          "type": "webview",
          "webviewOptions": {
            "retainContextWhenHidden": true
          }
        }
      ]
    },
    "uris": [
      {
        "scheme": "vscode",
        "pattern": "clive.auth/callback"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "yarn check-types && yarn lint && yarn build:extension && yarn build:webview",
    "build:extension": "node esbuild.js",
    "build:webview": "vite build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:vite": "vite build --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn check-types && yarn lint && node esbuild.js --production && vite build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn compile-tests && yarn compile && yarn lint",
    "check-types": "tsc --noEmit",
    "format": "biome check .",
    "format:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@clive/biome-config": "*",
    "@clive/tsconfig": "*",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/react": "^16.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "semantic-release-vsce": "^6.0.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.53",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@clerk/clerk-react": "5.57.0",
    "@clive/db": "*",
    "@clive/ui": "*",
    "@clive/webview-rpc": "*",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.12",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "ai": "^5.0.108",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "effect": "^3.19.9",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.13"
  }
}