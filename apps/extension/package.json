{
  "name": "clive",
  "displayName": "clive",
  "description": "Your AI E2E Test Writer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "type": "module",
  "activationEvents": [],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "clive.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "clive.showView",
        "title": "Show Clive",
        "icon": "$(beaker)"
      },
      {
        "command": "clive.setupCypress",
        "title": "Setup Cypress",
        "icon": "$(tools)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clive",
          "title": "Clive",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "clive": [
        {
          "id": "clive.mainView",
          "icon": "",
          "name": "Clive",
          "type": "webview"
        }
      ]
    },
    "uris": [
      {
        "scheme": "vscode",
        "pattern": "clive.auth/callback"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:extension && pnpm run build:webview",
    "build:extension": "node esbuild.js",
    "build:webview": "vite build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:vite": "vite build --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production && vite build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "format": "biome check .",
    "format:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@clive/biome-config": "workspace:*",
    "@clive/tsconfig": "workspace:*",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@testing-library/react": "^16.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/vscode": "catalog:",
    "@vitejs/plugin-react": "^5.1.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "semantic-release-vsce": "^6.0.17",
    "typescript": "catalog:",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@clerk/clerk-react": "catalog:",
    "@clive/ui": "workspace:*",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "catalog:",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "postcss": "^8.5.6",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  }
}
