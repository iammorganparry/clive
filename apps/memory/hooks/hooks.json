{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/hooks-schema.json",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash hooks/session-start.sh"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "bash hooks/user-prompt-submit.sh"
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "bash hooks/pre-tool-use.sh",
        "matcher": {
          "tool_name": "(Write|Edit|MultiEdit)"
        }
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "bash hooks/pre-compact.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash hooks/stop.sh"
      }
    ]
  }
}
