{
  "name": "@clive/tui",
  "version": "0.1.0",
  "type": "module",
  "module": "src/main.tsx",
  "description": "Clive TUI built with OpenTUI/React",
  "scripts": {
    "dev": "./dev.sh",
    "dev:here": "bun run --watch src/main.tsx --debug --workspace=$(pwd)",
    "dev:clive": "bun run --watch src/main.tsx --debug",
    "dev:no-debug": "bun run --watch src/main.tsx",
    "build": "echo 'No build step needed - noEmit: true'",
    "start": "bun run src/main.tsx",
    "start:debug": "bun run src/main.tsx --debug",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test": "vitest run",
    "postinstall": "cd ../../node_modules/node-pty && npx node-gyp rebuild 2>/dev/null || echo 'Warning: node-pty rebuild failed. PTY features may not work.'"
  },
  "dependencies": {
    "@clive/claude-services": "*",
    "@opentui/core": "^0.1.74",
    "@opentui/react": "^0.1.74",
    "@tanstack/react-query": "^5.90.12",
    "@xstate/react": "^6.0.0",
    "effect": "^3.19.9",
    "ghostty-opentui": "^1.3.12",
    "gray-matter": "^4.0.3",
    "node-pty": "^1.1.0",
    "react": "^19.2.0",
    "xstate": "^5.25.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^16.6.0",
    "react-devtools-core": "7",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
